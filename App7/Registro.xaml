<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.Registro">
    <ContentPage.Content>
        <StackLayout>


            <Label Text="Nombre"/>
            <Entry Placeholder="Introduce tu Nombre" x:Name="Nombre"></Entry>
            <Label Text="Usuario"/>
            <Entry Placeholder="Introduce tu Usuario" x:Name="Usuario" Keyboard="Email"></Entry>
            <Label Text="Contraseña"/>
            <Entry Placeholder="Introduce tu Contraseña" x:Name="Contrasenia" IsPassword="True"></Entry>
                
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked" BackgroundColor="Azure" ></Button>
     

        </StackLayout>
    </ContentPage.Content>
</ContentPage>